<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="256dp"
        android:layout_height="2dp"
        android:layout_marginStart="72dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/radio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="348dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radio5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/haerbin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/haerbin"
        app:layout_constraintStart_toEndOf="@+id/radio1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commodityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="哈尔滨啤酒"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/haerbin"
        app:layout_constraintTop_toTopOf="@+id/haerbin" />

    <TextView
        android:id="@+id/commodityname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="青岛啤酒"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/commodityname2"
        app:layout_constraintTop_toTopOf="@+id/commodityname2" />

    <TextView
        android:id="@+id/commodityname4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="雪花啤酒"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/xuehua"
        app:layout_constraintTop_toTopOf="@+id/xuehua" />

    <TextView
        android:id="@+id/commodityname5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="百威啤酒"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/baiwei"
        app:layout_constraintTop_toTopOf="@+id/baiwei" />

    <TextView
        android:id="@+id/production"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="产地：四川"
        app:layout_constraintStart_toStartOf="@+id/commodityname"
        app:layout_constraintTop_toBottomOf="@+id/commodityname" />

    <TextView
        android:id="@+id/production2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="产地：青岛"
        app:layout_constraintStart_toStartOf="@+id/commodityname3"
        app:layout_constraintTop_toBottomOf="@+id/commodityname3" />

    <TextView
        android:id="@+id/production3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="产地：北京"
        app:layout_constraintStart_toStartOf="@+id/commodityname4"
        app:layout_constraintTop_toBottomOf="@+id/commodityname4" />

    <TextView
        android:id="@+id/production4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="产地：武汉"
        app:layout_constraintStart_toStartOf="@+id/commodityname5"
        app:layout_constraintTop_toBottomOf="@+id/commodityname5" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="啤酒类"
        app:layout_constraintStart_toStartOf="@+id/production"
        app:layout_constraintTop_toBottomOf="@+id/production" />

    <TextView
        android:id="@+id/category2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="啤酒类"
        app:layout_constraintStart_toStartOf="@+id/production2"
        app:layout_constraintTop_toBottomOf="@+id/production2" />

    <TextView
        android:id="@+id/category3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="啤酒类"
        app:layout_constraintStart_toStartOf="@+id/production3"
        app:layout_constraintTop_toBottomOf="@+id/production3" />

    <TextView
        android:id="@+id/category4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="啤酒类"
        app:layout_constraintStart_toStartOf="@+id/production4"
        app:layout_constraintTop_toBottomOf="@+id/production4" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="￥100.8"
        app:layout_constraintBottom_toBottomOf="@+id/category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/category"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="￥109.4"
        app:layout_constraintBottom_toBottomOf="@+id/category3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/category3" />

    <TextView
        android:id="@+id/price4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="￥168.5"
        app:layout_constraintBottom_toBottomOf="@+id/category4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/category4" />

    <TextView
        android:id="@+id/price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="￥114.2"
        app:layout_constraintBottom_toBottomOf="@+id/category2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/category2" />

    <ImageView
        android:id="@+id/commodityname2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/qingdao"
        app:layout_constraintStart_toEndOf="@+id/radio2"
        app:layout_constraintTop_toBottomOf="@+id/haerbin" />

    <ImageView
        android:id="@+id/xuehua"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/xuehua"
        app:layout_constraintStart_toEndOf="@+id/radio3"
        app:layout_constraintTop_toBottomOf="@+id/commodityname2" />

    <ImageView
        android:id="@+id/baiwei"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/baiwei"
        app:layout_constraintStart_toEndOf="@+id/radio5"
        app:layout_constraintTop_toBottomOf="@+id/xuehua" />

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="总计：￥00.00"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:text="结算"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>